<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Amountdetail">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Amount Details"
        android:layout_marginTop="20dp"
        android:textSize="30sp"
        android:textColor="@color/colorAccent"
        android:textAlignment="center"
        android:layout_gravity="center"
        />

    <Spinner
        android:id="@+id/spinnerstore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/store"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:hint="Date"
            android:textSize="20dp"
            />

        <TextView
            android:id="@+id/time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="120dp"
            android:hint="time"
            android:textSize="20dp"

            />
    </LinearLayout>

    <EditText
        android:id="@+id/current"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="current amount"
        android:inputType="numberDecimal"
        />

    <Spinner
        android:id="@+id/spinnerGenres"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/Genres"
        />
    <EditText
        android:id="@+id/previous"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="previous amount"
        android:inputType="numberDecimal"
        android:layout_marginTop="20dp"
        />

    <Spinner
        android:id="@+id/spinner_Genres"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/Genres1"
        />

    <TextView
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:background="#d6d6f5"
        android:hint="Total amount"
        android:textSize="20dp"/>

    <Button
        android:layout_marginTop="20dp"
        android:id="@+id/btn_total"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Total"
        />
    <EditText
        android:id="@+id/missing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="if missing amount,detail"
        android:textSize="20sp"/>

    <Button
        android:id="@+id/btn_send"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="send"
        />

</LinearLayout>